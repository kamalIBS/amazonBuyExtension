{
	"manifest_version": 2,
	"name": "Product Purchase Extension",
	"description": "This extension will make online purchase",
	"version": "1.0",
	"offline_enabled": true,
    "browser_action": {
		"default_title": "Product Purchase Extension 2",
		"default_popup": "index.html",
		"default_icon":"images/amazon-128.png"
	},
	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage",
		"<all_urls>"
	],
    "content_scripts": [
    	{
			"matches": ["https://*.amazon.in/*","http://*.amazon.in/*","https://*.amazon.com/*","http://*.amazon.com/*"],
			"js": ["lib/jquery-3.4.1.min.js","content.js"],
			"run_at": "document_idle",
			"all_frames": false		
    	}
	],
	"background": {
		"scripts": ["lib/jquery-3.4.1.min.js","background.js"],
		"persistent": false
	}
}